h1
    {{ page.title || page.slug }}
    a.btn.btn-sm.btn-info.pull-right href="/dashboard/#/page/{{ page.id }}" ng-if="user.is_admin()"
        {{ 'EDIT' | translate }}
.panel.panel-default
    .panel-body.page-content ng-bind-html="page.content | trusthtml"
.panel.panel-default ng-if="page.products.length > 0"
    .panel-heading
        {{ 'RELATED_PRODUCTS' | translate }}
    .panel-body
        products-list products="page.products"
