h1
    {{ 'CARRIERS' | translate }}
p
    a.btn.btn-primary ui-sref="newcarrier"
        i.fa.fa-plus
        ,
        {{ 'ADD_CARRIER' | translate }}
div#pages-list.list-group
    input.list-group-item type="text" ng-model="query" placeholder="{{ 'FILTER' | translate }}"
    a.list-group-item ng-repeat="carrier in carriers | filter:query" ui-sref="carrier({carrier_id:carrier.id})"
        {{ carrier.description }} ({{ carrier.name }})
